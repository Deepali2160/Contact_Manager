        <div class="nav-links">
            <a href="dashboard.jsp">Dashboard</a>
            <a href="contacts.jsp" class="active">Contacts</a>
            <a href="reminders">Reminders</a>
            <div class="user-profile" id="userProfile">
                <%
                    User loggedInUser = (User) session.getAttribute("currentUser");
                    String userName = "U";
                    if (loggedInUser != null) {
                        userName = loggedInUser.getName().substring(0, 1);
                    }
                %>
                <div class="user-avatar"><%= userName %></div>
                <span class="user-name"><%= loggedInUser != null ? loggedInUser.getName() : "User" %></span>
                <div class="notification-badge">3</div>
                <div class="user-dropdown" id="userDropdown">
                    <a href="#"><i class="fas fa-user-circle"></i> My Profile</a>
                    <a href="#"><i class="fas fa-cog"></i> Account Settings</a>
                    <a href="#"><i class="fas fa-bell"></i> Notifications</a>
                    <div class="divider"></div>
                    <a href="#" class="logout-btn" id="logoutBtn"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </div>
            </div>
            <button class="theme-toggle" id="themeToggle">
                <i class="fas fa-moon"></i>
            </button>
        </div>
    </nav>

    <div class="dashboard-container">
        <div class="welcome-section">
            <h1 class="welcome-title">Your Contacts</h1>
            <% if (loggedInUser != null) { %>
                <p class="user-email">Logged in as <strong><%= loggedInUser.getEmail() %></strong></p>
            <% } %>
        </div>

        <%
            if (loggedInUser == null) {
                response.sendRedirect("login.jsp");
                return;
            }

            String successMsg = (String) session.getAttribute("successMsg");
            String errorMsg = (String) session.getAttribute("errorMsg");
            session.removeAttribute("successMsg");
            session.removeAttribute("errorMsg");

            ContactDao contactDao = new ContactDao();
            List<Contact> contactList = contactDao.getContactsByUserId(loggedInUser.getId());

            // Date formatter
            SimpleDateFormat dateFormat = new SimpleDateFormat("dd-MM-yyyy");
        %>

        <div class="card">
            <!-- Toast Messages -->
            <% if (successMsg != null) { %>
                <div class="toast-message toast-success show">
                    <%= successMsg %>
                </div>
            <% } else if (errorMsg != null) { %>
                <div class="toast-message toast-error show">
                    <%= errorMsg %>
                </div>
            <% } %>

            <div class="actions-container">
                <div class="search-bar">
                    <input type="text" id="searchInput" placeholder="Search contacts...">
                    <button><i class="fas fa-search"></i></button>
                </div>
                <a href="add_contact.jsp" class="add-contact-btn">
                    <i class="fas fa-user-plus"></i> Add New Contact
                </a>
            </div>

            <!-- Bulk Actions - Fixed to only show when contacts are selected -->
            <div class="bulk-actions" id="bulkActions">
                <div class="bulk-content">
                    <span class="bulk-count" id="selectedCount">0 selected</span>
                    <button class="bulk-btn bulk-delete" id="deleteSelected">Delete Selected</button>
                    <button class="bulk-btn bulk-export" id="exportSelected">Export Selected</button>
                    <button class="bulk-btn bulk-cancel" id="cancelSelection">Cancel</button>
                </div>
            </div>

            <!-- Contacts Table with Birthday and Anniversary columns added -->
            <% if (contactList != null && !contactList.isEmpty()) { %>
                <table class="contacts-table">
                    <thead>
                        <tr>
                            <th style="width: 40px;">
                                <input type="checkbox" id="selectAll" class="h-4 w-4">
                            </th>
                            <th>Photo</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Category</th>
                            <th>Birthday</th>
                            <th>Anniversary</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="contactsTableBody">
                        <% for (Contact contact : contactList) { %>
                            <tr data-contact-id="<%= contact.getId() %>">
                                <td>
                                    <input type="checkbox" class="contact-checkbox" value="<%= contact.getId() %>">
                                </td>
                                <td>
                                    <% if (contact.getPhotoPath() != null && !contact.getPhotoPath().isEmpty()) { %>
                                        <img src="uploads/<%= contact.getPhotoPath() %>" alt="Photo"
                                            class="contact-avatar">
                                    <% } else { %>
                                        <div class="contact-avatar">
                                            <%= contact.getName().substring(0, 1).toUpperCase() %>
                                        </div>
                                    <% } %>
                                </td>
                                <td><%= contact.getName() %></td>
                                <td><%= contact.getEmail() %></td>
                                <td><%= contact.getPhone() %></td>
                                <td><%= contact.getCategory() %></td>

                                <!-- Birthday Field -->
                                <td class="date-field <%= contact.getBirthday() == null ? "empty" : "" %>">
                                    <% if (contact.getBirthday() != null) { %>
                                        <%= dateFormat.format(contact.getBirthday()) %>
                                    <% } else { %>
                                        —
                                    <% } %>
                                </td>

                                <!-- Anniversary Field -->
                                <td class="date-field <%= contact.getAnniversary() == null ? "empty" : "" %>">
                                    <% if (contact.getAnniversary() != null) { %>
                                        <%= dateFormat.format(contact.getAnniversary()) %>
                                    <% } else { %>
                                        —
                                    <% } %>
                                </td>

                                <td>
                                    <div class="action-icons">
                                        <a href="editContact?id=<%= contact.getId() %>"
                                           class="action-icon edit-icon">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="deleteContact" method="post"
                                            onsubmit="return confirm('Are you sure you want to delete this contact?');"
                                            class="inline-block">
                                            <input type="hidden" name="contactId" value="<%= contact.getId() %>">
                                            <button type="submit" class="action-icon delete-icon">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>

                <!-- Pagination -->
                <div class="pagination">
                    <button class="pagination-btn" id="prevPage" disabled>Previous</button>
                    <div class="page-indicator">Page <span id="currentPage">1</span> of <span id="totalPages">1</span></div>
                    <button class="pagination-btn" id="nextPage">Next</button>
                </div>
            <% } else { %>
                <div class="no-contacts">
                    <p>No contacts found. Start by adding a new contact.</p>
